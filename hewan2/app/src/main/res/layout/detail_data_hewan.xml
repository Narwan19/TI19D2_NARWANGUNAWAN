<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/image_hewan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center"
        android:src="@drawable/kucing"
        />
    <TextView
        android:id="@+id/textDataHewan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:padding="5dp"
        android:text="Data Hewan "
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nama :"
            />
        <TextView
            android:id="@+id/txtNamaHewan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#0C0C0C"
            android:text="Kucing"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nama ilmiah :"
            />
        <TextView
            android:id="@+id/txtnamailmiah"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#0C0C0C"
            android:text="KUCING"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Jenis Hewan :"
            />
        <TextView
            android:id="@+id/txtJenisHewan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#0C0C0C"
            android:text="Kucing"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Keluarga :"
            />
        <TextView
            android:id="@+id/txtKeluarga"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#0C0C0C"
            android:text="Kucing"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ordo :"
            />
        <TextView
            android:id="@+id/txtOrdo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#0C0C0C"
            android:text="Kucing"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btnClose"
        android:text="Close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

</LinearLayout>